{
  "name": "react-components-template",
  "version": "1.0.3",
  "description": "react组件库脚手架",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "repository": "git@github.com:xiaomaer/react-components-template.git",
  "author": "xm",
  "license": "MIT",
  "typings": "types/index.d.ts",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "dev": "docz dev",
    "start": "npm run dev",
    "build:doc": "rimraf doc-build && docz build",
    "preview:doc": "docz serve",
    "commit": "git-cz",
    "lint:script": "eslint --ext .ts,tsx components",
    "fix:script": "eslint --fix --ext .ts,tsx components",
    "format": "prettier --write components/**/*.{ts,tsx,css,less}",
    "lint:style": "stylelint components/**/*.{css,less}",
    "fix:style": "stylelint --fix components/**/*.{css,less}",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf types lib esm dist",
    "build": "npm run clean && npm run build:types && gulp",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update": "jest --updateSnapshot"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "components/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "jest --bail --findRelatedTests"
    ],
    "components/**/*.{css,less}": [
      "prettier --write",
      "stylelint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.4.1",
    "@types/jest": "^25.1.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/testing-library__react": "^9.1.2",
    "@types/vfile-message": "^2.0.0",
    "@umijs/fabric": "^2.0.3",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "docz": "^2.2.0",
    "gatsby-plugin-less": "^3.0.19",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-babel": "^8.0.0",
    "gulp-cssnano": "^2.1.3",
    "gulp-less": "^4.0.1",
    "husky": "^4.2.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.1.0",
    "less": "^3.11.1",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "rimraf": "^3.0.2",
    "stylelint": "^15.10.1",
    "through2": "^3.0.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "prop-types": "^15.7.2"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "sideEffects": [
    "dist/*",
    "esm/**/style/*",
    "lib/**/style/*",
    "*.less"
  ]
}
